<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hk.com.caretech.clive.idata_android.Server.Fragment_crud_retrieve">

    <Button
        android:id="@+id/previous_crud_retrieve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/previous"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <Button
        android:id="@+id/retrieveAllsummit_bttn_crud_retrieve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:text="@string/retrive_all"
        app:layout_constraintStart_toStartOf="@id/previous_crud_retrieve"
        app:layout_constraintTop_toBottomOf="@id/previous_crud_retrieve"
       />


    <Button
        android:id="@+id/retriveBysummit_bttn_crud_retrieve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="@string/retrieve_by"
        app:layout_constraintStart_toStartOf="@id/retrieveAllsummit_bttn_crud_retrieve"
        app:layout_constraintTop_toBottomOf="@id/retrieveAllsummit_bttn_crud_retrieve"  />

    <Spinner
        android:id="@+id/spinner_crud_retrieve"
        android:entries="@array/searchelders_array"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="@id/retriveBysummit_bttn_crud_retrieve"
        app:layout_constraintTop_toBottomOf="@id/retriveBysummit_bttn_crud_retrieve"
        />
    
    <EditText
        android:id="@+id/editText_crud_retrieve"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintStart_toEndOf="@id/spinner_crud_retrieve"
        app:layout_constraintTop_toTopOf="@id/spinner_crud_retrieve"
        app:layout_constraintEnd_toEndOf="parent"
        />




</androidx.constraintlayout.widget.ConstraintLayout>