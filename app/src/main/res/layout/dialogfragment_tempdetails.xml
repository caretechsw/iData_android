<!--            app:layout_constraintGuide_begin="50dp"/>-->

        <LinearLayout
            android:id="@+id/linearLayout1_dialogfragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_id_dialogfragment"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="@string/id_dialog" />

            <TextView
                android:id="@+id/textView3_id_dialogfragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/seperator"
                app:layout_constraintStart_toEndOf="@id/textView_id_dialogfragment"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView2_id_dialogfragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp" />

    </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2_dialogfragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_name_dialogfragment"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="@string/name_dialog" />

            <TextView
                android:id="@+id/textView3_name_dialogfragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/seperator"
                app:layout_constraintStart_toEndOf="@id/textView_name_dialogfragment"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView2_name_dialogfragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout3_dialogfragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_bedno_dialogfragment"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="@string/bedno_dialog" />

            <TextView
            android:id="@+id/textView3_bedno_dialogfragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/seperator"
            app:layout_constraintStart_toEndOf="@id/textView_bedno_dialogfragment"
            android:textSize="20sp" />

            <TextView
                android:id="@+id/textView2_bedno_dialogfragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearLayout4_dialogfragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_deviceID_dialogfragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="@string/device_id_dialog" />

            <TextView
                android:id="@+id/textView3_deviceID_dialogfragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/seperator"
                app:layout_constraintStart_toEndOf="@id/textView_deviceID_dialogfragment"
                android:textSize="20sp" />

        </LinearLayout>
        <TextView
            android:id="@+id/textView2_deviceID_dialogfragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/linearLayout4_dialogfragment"
            android:textSize="20sp" />

        <LinearLayout
            android:id="@+id/linearLayout5_dialogfragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_temperature_dialogfragment"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="@string/temperature_diaog" />

