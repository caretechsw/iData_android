                android:layout_height="wrap_content"
                android:textSize="20sp" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearLayout6_dialogfragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_timestamp_dialogfragment"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="@string/timestamp_dialog" />

            <TextView
                android:id="@+id/textView3_timestamp_dialogfragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/seperator"
                app:layout_constraintStart_toEndOf="@id/textView_timestamp_dialogfragment"
                android:textSize="20sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView2_timestamp_dialogfragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@id/linearLayout6_dialogfragment"/>

        <LinearLayout
            android:id="@+id/linearLayout7_dialogfragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_status_dialogfragment"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="@string/status_dialog" />

            <TextView
                android:id="@+id/textView3_status_dialogfragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/seperator"
                app:layout_constraintStart_toEndOf="@id/textView_status_dialogfragment"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView2_status_dialogfragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp" />

        </LinearLayout>

    </LinearLayout>
     </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>