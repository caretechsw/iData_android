<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.example.idata_android.Fragment_1_ipAddress"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_1_ip_address">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.example.idata_android.Fragment_2_crudSelect"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_crud_retrive">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
        <action
            android:id="@+id/action_SecondFragment_to_fragment_crud_retrieve"
            app:destination="@id/fragment_crud_retrieve" />
    </fragment>
    <fragment
        android:id="@+id/fragment_crud_retrieve"
        android:name="com.example.idata_android.Fragment_crud_retrieve"
        android:label="fragment_crud_retrive"
        tools:layout="@layout/fragment_crud_retrive" >
        <action
            android:id="@+id/action_fragment_crud_retrieve_to_SecondFragment"
            app:destination="@id/SecondFragment" />
    </fragment>
</navigation>